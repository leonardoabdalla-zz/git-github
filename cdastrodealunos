print('Cadastro de Alunos')
cadastro = input('Deseja cadastrar um aluno?(S/N)')
cadastro = cadastro.upper()
listaAlunos = []
while(cadastro == 'S'):
    aluno1 = input('Qual nome do aluno? ')
    aluno1 = aluno1.capitalize()
    matricula = int(input('qual seu código matricula? '))
    nota1 = float(input('Nota do primeiro bimestre: '))
    nota2 = float(input('Nota do segundo bimestre: '))
    nota3 = float(input('Nota do terceiro bimestre: '))
    nota4 = float(input('Nota do quarto bimestre: '))
    mediaNotas = (nota1 + nota2 + nota3 + nota4) / 4
    if (mediaNotas >= 7.0):
        mediaNotas = ('aprovado')
    elif (mediaNotas < 7 and mediaNotas > 3):
        mediaNotas = ('recuperação')
    else:
        mediaNotas = ('reprovado')
    print('Aluno = {}\nMatrícula = {} '.format(aluno1, matricula))
    print(' Nota do primeiro bimestre = {} \n Nota do segundo bimestre = {} \n Nota do terceiro bimestre = {} \n '
          'Nota do quarto bimestre = {}'.format(nota1, nota2, nota3, nota4))
    print(' Sua média final foi ', (nota1 + nota2 + nota3 + nota4) / 4)
    print('status: ', mediaNotas)
    aluno01 = [aluno1, matricula, mediaNotas]
    listaAlunos.append(aluno01)
    aluno1 += '1'
    matricula += 1
    mediaNotas += '1'
    aluno01 += '1'
    cadastro = input('Deseja cadastrar um novo aluno?(S/N) ')
    cadastro = cadastro.upper()
print(listaAlunos)
